<div class="container">

  <h1>Attaques</h1>

  <% if @moves.any? %>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @moves.each do |move| %>
        <tr>
          <td><%= move.name %></td>
          <td><%= move.description %></td>
          <td>
            <% type = move.type %>
            <% if type.nil? %>
              Non défini.
            <% else %>
            <span class="badge" style="background-color: <%= type.color %>">
              <%= type_badge(type.name, type.color) %>
            </span>
            <% end %>
          </td>
          <td>
            <%= link_to('Show', move, class: 'btn btn-info') %>
            <%= link_to('Edit', edit_move_path(move), class: 'btn btn-warning') %>
            <%= link_to('Destroy', move,
                        method: :delete,
                        data: {
                            confirm: 'Êtes-vous certain de vouloir supprimer cette attaque ?'
                        },
                        class: 'btn btn-danger'
                )
            %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>
      Il n'y a pas d'attaque
    </p>
  <% end %>

  <br>

  <p>
    <%= link_to('Ajouter une attaque', new_move_path, class: 'btn btn-success') %>
  </p>
</div>
