<%#= render '../pokemons/navbar' %>
<div class="container">
  <h1>Liste des types</h1>
  <table class="table">
    <thead>
    <tr>
      <th>Type</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @types.each do |type| %>
      <tr>
        <td>
          <span class="badge" style="background-color: <%= type.color %>">
            <%= type.name %>
          </span>
        </td>
        <td>
          <%= link_to 'Afficher', type, class: 'btn btn-info' %>
          <%= link_to 'Editer', edit_type_path(type), class: 'btn btn-warning' %>
          <%= link_to 'Supprimer',
                      type,
                      method: :delete,
                      data: {confirm: 'Êtes-vous sûr de vouloir supprimer ce type ?'},
                      class: 'btn btn-danger'
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Ajouter un type', new_type_path, class: 'btn btn-success' %>
</div>
