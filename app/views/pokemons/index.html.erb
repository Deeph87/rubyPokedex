<div class="container">
  <h1>La liste des pokemons</h1>

  <% if @pokemons.any? %>
    <table class="table">
      <thead>
      <tr>
        <th>Numéro</th>
        <th>Name</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @pokemons.each do |pokemon| %>
        <tr>
          <td><%= pokemon.number %></td>
          <td><%= pokemon.name %></td>
          <td>
            <% type = pokemon.type %>
            <% if type.nil? %>
              Non défini.
            <% else %>
              <span class="badge" style="background-color: <%= type.color %>">
                <%= type_badge(type.name, type.color) %>
              </span>
            <% end %>
          </td>
          <td>
            <%= link_to('Voir', pokemon, class: 'btn btn-info') %>
            <%= link_to('Editer', edit_pokemon_path(pokemon), class: 'btn btn-warning') %>
            <%= link_to('Suprimmer', pokemon,
                        method: :delete,
                        data: {
                            confirm: 'Êtes-vous sûr(e) de vouloir supprimer ce pokemon ?'
                        },
                        class: 'btn btn-danger'
                )
            %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>
      Il n'y a pas de pokemon
    </p>
  <% end %>

  <p>
    <%= link_to('Ajouter un pokemon', new_pokemon_path, class: 'btn btn-success') %>
  </p>
</div>
